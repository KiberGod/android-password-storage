<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.create.CreateCategoryFragment">

    <EditText
        android:id="@+id/editCreateCategoryName"
        android:layout_width="250dp"
        android:layout_height="47dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        android:textColor="@color/white_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="100dp" />

    <Button
        android:id="@+id/saveNewCategoryButton"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:text="Зберегти"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCreateCategoryName" />

    <TextView
        android:id="@+id/createCategoryStatus"
        android:layout_width="310dp"
        android:layout_height="24dp"
        android:text=""
        android:textColor="#E32626"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveNewCategoryButton"
        app:layout_constraintVertical_bias="0.1" />

    <ImageView
        android:id="@+id/createCategoryIcon"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/vector_template_image"
        android:background="@color/gray_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createCategoryStatus" />

</androidx.constraintlayout.widget.ConstraintLayout>
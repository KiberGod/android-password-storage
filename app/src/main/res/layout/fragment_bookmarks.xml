    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pages.storage.sections.BookmarksFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

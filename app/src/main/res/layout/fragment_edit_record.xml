<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.storage.sections.EditRecordFragment">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="258dp"
        android:layout_height="29dp"
        android:layout_marginTop="16dp"
        android:text="Редагування запису"
        android:textColor="#FF0000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editEditRecordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:background="@color/gray_text"
        android:ems="10"
        android:hint="Назва"
        android:inputType="text"
        android:textColor="@color/white_2"
        android:textColorHint="#C3BEBE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editEditRecordText"
        android:layout_width="356dp"
        android:layout_height="132dp"
        android:layout_marginTop="60dp"
        android:background="@color/gray_text"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="Основний текст"
        android:gravity="start|top"
        android:textColor="@color/white_2"
        android:textColorHint="#C3BEBE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editEditRecordTitle" />

    <Button
        android:id="@+id/dropdownEditRecordCategoryButton"
        android:layout_width="143dp"
        android:layout_height="44dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editEditRecordText"
        app:layout_constraintVertical_bias="0.175" />

    <TextView
        android:id="@+id/textview13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Категорія"
        android:textColor="@color/white_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dropdownEditRecordCategoryButton"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editEditRecordText"
        app:layout_constraintVertical_bias="0.198" />

    <TextView
        android:id="@+id/editRecordStatus"
        android:layout_width="340dp"
        android:layout_height="32dp"
        android:layout_marginTop="44dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/saveEditRecordButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dropdownEditRecordCategoryButton"
        app:layout_constraintVertical_bias="0.162" />

    <Button
        android:id="@+id/saveEditRecordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:text="Зберегти"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dropdownEditRecordCategoryButton" />

    <Button
        android:id="@+id/cancelEditRecordButton"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_marginTop="104dp"
        android:text="Відмінити"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editRecordStatus" />

</androidx.constraintlayout.widget.ConstraintLayout>
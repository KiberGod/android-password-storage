<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.storage.sections.EditRecordFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:id="@+id/editRecordsScrollArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="177dp"
                android:layout_height="26dp"
                android:layout_marginBottom="16dp"
                android:text="Редагування запису"
                android:textColor="#FF0000"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editEditRecordTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:background="@color/gray_text"
                    android:ems="10"
                    android:hint="Назва"
                    android:inputType="text"
                    android:textColor="@color/white_2"
                    android:textColorHint="#C3BEBE" />

                <ImageView
                    android:id="@+id/editRecordIcon"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:background="@color/gray_text"
                    android:src="@drawable/vector_template_image" />
            </LinearLayout>

            <EditText
                android:id="@+id/editEditRecordText"
                android:layout_width="356dp"
                android:layout_height="132dp"
                android:layout_marginBottom="16dp"
                android:background="@color/gray_text"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Основний текст"
                android:inputType="textMultiLine"
                android:textColor="@color/white_2"
                android:textColorHint="#C3BEBE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addNewFieldButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:text="Додати поле" />

                <TextView
                    android:id="@+id/textview13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:text="Категорія"
                    android:textColor="@color/white_2" />

                <Button
                    android:id="@+id/dropdownEditRecordCategoryButton"
                    android:layout_width="143dp"
                    android:layout_height="44dp"

                    />
            </LinearLayout>

            <TextView
                android:id="@+id/editRecordStatus"
                android:layout_width="340dp"
                android:layout_height="32dp"
                android:layout_marginBottom="16dp"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/saveEditRecordButton"
                    android:layout_width="121dp"
                    android:layout_height="41dp"
                    android:layout_marginRight="10dp"
                    android:text="Зберегти" />

                <Button
                    android:id="@+id/cancelEditRecordButton"
                    android:layout_width="119dp"
                    android:layout_height="41dp"
                    android:layout_marginRight="10dp"
                    android:text="Відмінити" />

                <Button
                    android:id="@+id/deleteRecordButton"
                    android:layout_width="121dp"
                    android:layout_height="42dp"
                    android:text="Видалити" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
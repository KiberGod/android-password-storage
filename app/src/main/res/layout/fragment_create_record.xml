<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.create.CreateRecordFragment">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/createRecordsScrollArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/editCreateRecordTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/gray_text"
                android:ems="10"
                android:hint="Назва"
                android:inputType="text"
                android:textColor="@color/white_2"
                android:textColorHint="#C3BEBE" />

            <TextView
                android:id="@+id/createRecordStatus"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="16dp"
                android:text="" />

            <EditText
                android:id="@+id/editCreateRecordText"
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:layout_marginBottom="16dp"
                android:background="@color/gray_text"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Основний текст"
                android:inputType="textMultiLine"
                android:textColor="@color/white_2"
                android:textColorHint="#C3BEBE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:text="Категорія"
                    android:textColor="@color/white_2" />

                <Button
                    android:id="@+id/dropdownCreateRecordCategoryButton"
                    android:layout_width="102dp"
                    android:layout_height="42dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp" />

                <ImageView
                    android:id="@+id/createRecordIcon"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:background="@color/gray_text"
                    android:src="@drawable/vector_template_image" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addFieldButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:text="Додати поле" />

                <Button
                    android:id="@+id/saveNewRecordButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:text="Зберегти" />

                <Button
                    android:id="@+id/generatePasswordButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Згенерувати!" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
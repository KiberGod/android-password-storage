<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.generator.PasswordGeneratorFragment">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="password generator"
        android:textColor="#FFFF0000"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/passwordEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="password"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white_2"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textPasswordLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        android:text="Довжина пароля: "
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/createPassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordEdit" />

    <Button
        android:id="@+id/createPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="64dp"
        android:text="Згенерувати"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordEdit" />

    <SeekBar
        android:id="@+id/passwordLengthSeekBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createPassword" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="409dp"
        android:layout_height="240dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordLengthSeekBar">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Тип \nсимволів"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="спосіб \nзадання довжини"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Довжина"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Switch
                android:id="@+id/typeSwitch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Цифри"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <Switch
                android:id="@+id/randomLenSwitch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Випадково"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/editLength1"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Switch
                android:id="@+id/typeSwitch2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Літери"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <Switch
                android:id="@+id/randomLenSwitch2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Випадково"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/editLength2"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Switch
                android:id="@+id/typeSwitch3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ЛІТЕРИ"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <Switch
                android:id="@+id/randomLenSwitch3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Випадково"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/editLength3"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Switch
                android:id="@+id/typeSwitch4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Спец."
                android:textColor="@color/white"
                android:textSize="16dp" />

            <Switch
                android:id="@+id/randomLenSwitch4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Випадково"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/editLength4"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2"
        tools:layout_editor_absoluteX="1dp">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Заборонені символи"
            android:textSize="16dp" />

        <Button
            android:id="@+id/setNewLengthsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Зберегти довжини" />
    </LinearLayout>

    <EditText
        android:id="@+id/notUseSymbolsEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="not to use"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white_2"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout11"
        tools:layout_editor_absoluteX="-9dp" />



</androidx.constraintlayout.widget.ConstraintLayout>